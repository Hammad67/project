<h1>Edit Article</h1>

<%= simple_form_for @article do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <%= form.rich_text_area :body %>
  </div>
  <div class="form-group">
    <%= form.select :category_ids, options_for_select(Category.all.collect{ |e| [e.name, e.id] }),{ :prompt => "Please select"},multiple: true, size: 10 %>
  </div>


  <div>
    <%= form.submit class:"btn btn-warning" %>
  </div>
<% end %>